[data-tip] {
	position: relative;	
}
[data-tip]:before {
	content:'';
	/* hides the tooltip when not hovered */
	display:none;
	content:'';
	border-left: 5px solid transparent;
	border-right: 5px solid transparent;
	border-bottom: 5px solid #777;	
	position:absolute;
	top:25px;
	left:45px;
	z-index:8;
	font-size:0;
	line-height:0;
	width:0;
	height:0;
}
[data-tip]:after {
	display:none;
	content:attr(data-tip);
	position:absolute;
	top:30px;
	left:-70px;
	padding:2px 8px;
	background:#555;
	opacity:0.90;
	color:#fff;
	z-index:9;
	font-size: 13px;
	height: auto;
	line-height:16px;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
}
[data-tip]:hover:before,
[data-tip]:hover:after {
	display:block;
}
